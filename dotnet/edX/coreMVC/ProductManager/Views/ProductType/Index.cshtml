@model List<ProductManager.Models.ProductType>

<h1>All Product Types</h1>
    <div class="row">
        <div class="col-md-2">ID</div>
        <div class="col-md-2">Name</div>
        <div class="col-md-2">Product Count</div>
        <div class="col-md-2">Delete</div>
        <div class="col-md-2">Edit</div>
        <div class="col-md-2">Products</div>
    </div>

    @foreach (var pt in Model) {
        <div class="row">
            <div class="col-md-2">@pt.ID</div>
            <div class="col-md-2">@pt.Name</div>
            <div class="col-md-2">@pt.Products.Count</div>
            <div class="col-md-2">
                @if (pt.CanBeRemoved) {
                    @Html.ActionLink("Delete", "Delete", new { id = pt.ID })
                } else {
                    <span>--</span>
                }
            </div class="col-md-2">
            <div class="col-md-2">@Html.ActionLink("Edit", "Edit", new { id = pt.ID })</div>
            <div class="col-md-2">@Html.ActionLink("Products", "IndexByTypeID", "Product", new { id = pt.ID })</div>
        </div>
    }
@Html.ActionLink("Add a New Product Type", "Create")
